[bootstrap]
main_collection = /main/main.collectionc

[script]
shared_state = 1

[display]
width = 320
height = 288
update_frequency = 60

[android]
input_method = HiddenInputField

[project]
title = tsd-template-yagames
developer = https://github.com/ts-defold/tsd-template-yagames
dependencies#0 = https://github.com/ts-defold/defold-lldebugger/archive/extension.zip
dependencies#1 = https://github.com/indiesoftby/defold-yagames/archive/refs/tags/0.14.0.zip

[render]
clear_color_red = 0.79
clear_color_green = 0.86
clear_color_blue = 0.62

[html5]
htmlfile = /manifests/web/template.html
scale_mode = no_scale
show_console_banner = 0
show_made_with_defold = 0
show_fullscreen_button = 0

[sprite]
max_count = 256

[yagames]
sdk_url = https://yandex.ru/games/sdk/v2
